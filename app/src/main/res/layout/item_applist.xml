<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/iv_itemlist_image"
        android:src="@android:drawable/sym_def_app_icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_itemgridview_appname"
        android:textSize="20sp"
        android:layout_toRightOf="@id/iv_itemlist_image"
        android:text="asmasjaksaska"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/iv_itemgridview_isSDLoad"
        android:layout_toRightOf="@id/iv_itemlist_image"
        android:layout_below="@id/iv_itemgridview_appname"
        android:text="asmasjaksaska"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/unlock"
        android:id="@+id/iv_packageM_islock"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>


</RelativeLayout>