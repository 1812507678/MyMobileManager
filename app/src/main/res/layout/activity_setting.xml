<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settingItem="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.haijun.mymobilemanager.SettingActivity">

    <TextView
        style="@style/myTopTitle"
        android:text="设置中心" />
    <com.example.haijun.view.SettingItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        settingItem:udpadetitle="自动更新"
        settingItem:checkstring="开启自动更新"
        settingItem:uncheckstring="取消自动更新"
        settingItem:spkeyname="auto_update"
        >
    </com.example.haijun.view.SettingItem>
    <com.example.haijun.view.SettingItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        settingItem:udpadetitle="号码归属地"
        settingItem:checkstring="号码归属地显示"
        settingItem:uncheckstring="号码归属地取消"
        android:id="@+id/si_setting_phonelocal"
        settingItem:spkeyname="showloaction"
        >
    </com.example.haijun.view.SettingItem>
    <com.example.haijun.view.SettingItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        settingItem:udpadetitle="归属地提示风格"
        settingItem:checkstring="半透明"
        settingItem:uncheckstring="正常"
        settingItem:spkeyname="loactionstyle"
        >
    </com.example.haijun.view.SettingItem>
    <com.example.haijun.view.SettingItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        settingItem:udpadetitle="电话、短信黑名单"
        settingItem:checkstring="开启"
        settingItem:uncheckstring="关闭"
        settingItem:spkeyname="blacknumber"
        android:onClick="startBlackNumberService"
        >
    </com.example.haijun.view.SettingItem>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置来电显示样式"
        android:layout_margin="5dp"
        android:background="@drawable/btn_green_normal"
        android:id="@+id/bt_setting_phonestyle"
        android:onClick="setPhoneStyle"/>
</LinearLayout>
